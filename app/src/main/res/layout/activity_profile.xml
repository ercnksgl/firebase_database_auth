<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#309dff"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/activity_profile_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Profil Sayfası"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/activity_weather_desc_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_weather_take_day_count_edt" />

    <EditText
        android:id="@+id/activity_weather_take_day_count_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="number"
        android:textStyle="bold"
        android:hint="Gün gir(sayı)"
        app:layout_constraintEnd_toStartOf="@+id/activity_weather_show_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_weather_city_edt"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/activity_weather_show_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Göster"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/activity_weather_take_day_count_edt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_weather_take_day_count_edt"
        app:layout_constraintTop_toTopOf="@+id/activity_weather_take_day_count_edt" />

    <EditText
        android:id="@+id/activity_weather_city_edt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Şehir"
        app:layout_constraintEnd_toEndOf="@+id/activity_weather_take_day_count_edt"
        app:layout_constraintStart_toStartOf="@+id/activity_weather_take_day_count_edt"
        app:layout_constraintTop_toBottomOf="@+id/activity_profile_title_txt" />
</android.support.constraint.ConstraintLayout>